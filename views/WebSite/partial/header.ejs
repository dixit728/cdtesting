                                <li><a class="dropdown-item" href="/user/LogOut">Sign out</a></li>
                            </ul>
                        </div> -->
                        <% } if(is_User==false) { %>
                            <a href="/user/login"><button type="button" class="btn btn-1 position-relative">Login/Signup</button></a>
                            <% } %>
                </div>
            </div>
        </nav>
        <% if(success && success.length> 0) { %>
            <div class="alert alert-primary" role="alert">
                <%= success %>
